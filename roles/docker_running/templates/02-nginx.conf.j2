upstream docker-registry {
    server registry:5000;
}

map $upstream_http_docker_distribution_api_version $docker_distribution_api_version {
    '' 'registry/2.0';
}

server {
    listen 443 ssl;
    server_name registry.mahmoudisari.ir;

    ssl_certificate /etc/letsencrypt/live/wordpress.mahmoudisari.ir/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wordpress.mahmoudisari.ir/privkey.pem;

    client_max_body_size 0;

    chunked_transfer_encoding on;

    location / {
        if ($request_uri !~* "^/v2") {
            return 301 https://$host/v2;
        }
    }

    location /v2 {
        if ($http_user_agent ~ "^(docker\/1\.(3|4|5(?!\.[0-9]-dev))|Go ).*$" ) {
            return 404;
        }

        auth_basic "Registry realm";
        auth_basic_user_file /etc/nginx/auth/nginx.htpasswd;

        add_header 'Docker-Distribution-Api-Version' $docker_distribution_api_version always;

        proxy_pass                           http://docker-registry;
        proxy_set_header Host                $http_host;
        proxy_set_header X-Real-IP           $remote_addr;
        proxy_set_header X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto   $scheme;
        proxy_read_timeout                   900;
        add_header X-Powered-By "Parsa Mahmoudi Sari | mahmoudisari.ir";
    }
}

server {
    listen 80;
    server_name registry.mahmoudisari.ir;
    return 301 https://$host$request_uri;
}

upstream wordpress-agent {
    server wordpress:80;
}

server {
    listen 443 ssl;
    server_name wordpress.mahmoudisari.ir;

    ssl_certificate /etc/letsencrypt/live/wordpress.mahmoudisari.ir/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wordpress.mahmoudisari.ir/privkey.pem;

    location / {
        proxy_pass                           http://wordpress-agent;
        proxy_set_header  Host               $http_host;
        proxy_set_header  X-Real-IP          $remote_addr;
        proxy_set_header  X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header  X-Forwarded-Proto  $scheme;
        add_header X-Powered-By "Parsa Mahmoudi Sari | mahmoudisari.ir";
    }
}

server {
    listen 80;
    server_name wordpress.mahmoudisari.ir;
    return 301 https://$host$request_uri;
}
